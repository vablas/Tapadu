<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin" >

    <LinearLayout
        android:id="@+id/wgPalabraClave"
        style="@style/AppTheme.Widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_widget_background"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/my_image_width"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:gravity="center"
            android:src="@drawable/ic_launcher" />

        <TextView
            style="@style/AppTheme.WidgetText"
            android:id="@+id/msjWidget"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/wgPalabraClave"
            android:gravity="center"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/my_image_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/ic_microphone_white" />
    </LinearLayout>

</FrameLayout>